{
  "$id": "https://open-metadata.org/schema/entity/domains/domain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Domain",
  "description": "A `Domain` is a bounded context that is aligned with a Business Unit or a function within an organization.",
  "type": "object",
  "javaType": "org.openmetadata.schema.entity.domains.Domain",
  "javaInterfaces": ["org.openmetadata.schema.EntityInterface"],
  "definitions": {
    "domainType" : {
      "description" : "Type of a domain",
      "type" : "string",
      "enum": [
        "Source-aligned",
        "Consumer-aligned",
        "Aggregate"
      ]
    },
    "dataSourceEl": {
      "type": "object",
      "properties": {
        "elNumber": {
          "description": "Data source number",
          "type": "string"
        },
        "name": {
          "description": "Data source name",
          "type": "string"
        },
        "type": {
          "description": "Data source type",
          "type": "string"
        },
        "loadMode": {
          "description": "Data source data load mode",
          "type": "string"
        },
        "loadObjectsList": {
          "description": "Data source list of loaded objects",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "domainTeamMember": {
      "type": "object",
      "properties": {
        "elNumber": {
          "description": "Team member number",
          "type": "string"
        },
        "fullName": {
          "description": "Team member full name",
          "type": "string"
        },
        "ssp": {
          "description": "ssp",
          "type": "string"
        },
        "role": {
          "description": "Team member role",
          "type": "string"
        },
        "responseArea": {
          "description": "Area of responsibility",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "domainQuota": {
      "type": "object",
      "properties": {
        "elNumber": {
          "description": "Quota number",
          "type": "string"
        },
        "subsystem": {
          "description": "subsystem name",
          "type": "string"
        },
        "resourceType": {
          "description": "resource type",
          "type": "string"
        },
        "quotaSize": {
          "description": "Quota size",
          "type": "string"
        },
        "comment": {
          "description": "comment",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "id": {
      "description": "Unique ID of the Domain",
      "$ref": "../../type/basic.json#/definitions/uuid"
    },
    "domainType": {
      "description": "Domain type",
      "$ref": "#/definitions/domainType"
    },
    "name": {
      "description": "A unique name of the Domain",
      "$ref": "../../type/basic.json#/definitions/entityName"
    },
    "fullyQualifiedName": {
      "description": "FullyQualifiedName same as `name`.",
      "$ref": "../../type/basic.json#/definitions/fullyQualifiedEntityName"
    },
    "displayName": {
      "description": "Name used for display purposes. Example 'Marketing', 'Payments', etc.",
      "type": "string"
    },
    "fullName": {
      "description": "full domain name",
      "type": "string"
    },
    "domainOwner": {
      "description": "Domain owner name",
      "type": "string"
    },
    "domainTechLeader": {
      "description": "Domain tech leader name",
      "type": "string"
    },
    "description": {
      "description": "Description of the Domain.",
      "$ref": "../../type/basic.json#/definitions/markdown"
    },
    "dataSourcesList": {
      "description": "Data sources list",
      "type": "array",
      "items": {
        "$ref": "../../entity/domains/domain.json#/definitions/dataSourceEl"
      }
    },
    "domainTeam": {
      "description": "Domain team",
      "type": "array",
      "items": {
        "$ref": "../../entity/domains/domain.json#/definitions/domainTeamMember"
      }
    },
    "domainQuotasList": {
      "description": "Domain quotas",
      "type": "array",
      "items": {
        "$ref": "../../entity/domains/domain.json#/definitions/domainQuota"
      }
    },
    "tags": {
      "description": "Tags for this Domain.",
      "type": "array",
      "items": {
        "$ref": "../../type/tagLabel.json"
      },
      "default": null
    },
    "style": {
      "$ref": "../../type/basic.json#/definitions/style"
    },
    "version": {
      "description": "Metadata version of the entity.",
      "$ref": "../../type/entityHistory.json#/definitions/entityVersion"
    },
    "updatedAt": {
      "description": "Last update time corresponding to the new version of the entity in Unix epoch time milliseconds.",
      "$ref": "../../type/basic.json#/definitions/timestamp"
    },
    "updatedBy": {
      "description": "User who made the update.",
      "type": "string"
    },
    "href": {
      "description": "Link to the resource corresponding to this entity.",
      "$ref": "../../type/basic.json#/definitions/href"
    },
    "parent" : {
      "description" : "Parent domains. When 'null' or not set, indicates that this is the top level domain.",
      "$ref" : "../../type/entityReference.json"
    },
    "children" : {
      "description" : "Children domains or sub-domains.",
      "$ref": "../../type/entityReferenceList.json"
    },
    "owner": {
      "description": "Owner of this Domain.",
      "$ref": "../../type/entityReference.json"
    },
    "experts": {
      "description": "List of users who are experts in this Domain.",
      "$ref": "../../type/entityReferenceList.json",
      "default" : null
    },
    "changeDescription": {
      "description": "Change that lead to this version of the entity.",
      "$ref": "../../type/entityHistory.json#/definitions/changeDescription"
    }
  },
  "required": ["id", "name", "description", "domainType"],
  "additionalProperties": false
}
